/* components/cart-item/index.wxss */
.container {
    box-sizing: border-box;
    width: 100%;
    height: 220rpx;
    display: flex;
    flex-direction: row;
    padding: 30rpx;
    border-top: 2rpx solid #f3f3f3;
}

.checkbox {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: 30rpx;
}

.sku-container {
    height: 160px;
    flex: 1 1 auto;
    display: flex;
    flex-direction: row;
    /*position: relative;*/
}

.image-container {
    position: relative;
    height: 160rpx;
    width: 160rpx;
    margin-right: 20rpx;
}

.img {
    height: 100%;
    width: 100%;
}

.left {
    height: 100%;
    width: 100%;
}

.image-sold-out {
    background: #157658;
    position: absolute;
    height: 100%;
    width: 100%;
    opacity: 0.5;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}