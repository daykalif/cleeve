/* components/address/index.wxss */

.container {
    box-sizing: border-box;
    width: 750rpx;
    min-height: 176rpx;
    padding-top: 40rpx;
    background-color: #F6FBF9;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

/* 如果使用自定义图标，需要单独在components组件中引入该样式类，并打开font-family注释 */
.sleeve {
    /*font-family: sleeve !important;*/
    font-size: 36rpx;
    font-style: normal;
    color: #333333;
}

.btn {
    border-color: #157658 !important;
    color: #157658 !important;
}

.bottom-img {
    width: 750rpx;
    height: 8rpx;
    margin-top: 30rpx;
}

.address-container {
    width: 750rpx;
    height: 176rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #F6FBF9;
}

.button {
    border-color: #157658 !important;
    color: #157658 !important;
}

.img-address {
    width: 100%;
    height: 8rpx;
}

.address-inner {
    display: flex;
    flex-direction: column;
    width: 620rpx;
}

.base-info {
    font-size: 28rpx;
    color: #333333;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.name {
    margin-left: 20rpx;
}

.address-info {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666666;
    padding-left: 60rpx;
}

.address {
    color: #157658 !important;
    left: 20rpx;
}

.phone {
    margin-left: 20rpx;
}